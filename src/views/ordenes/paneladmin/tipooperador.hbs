<div class="formulario">
    <div class="container">
        <h2>Asignar Tipo Operador</h2>
    </div>
    <form action="/edittipoOperador" class="needs-validation" novalidate method="post" id="" name="">
        <div class="row g-2">
            <div class="col-md">
                <label for="idUser" class="form-label">Operador</label>
                <select name="idUser" class="form-select" id="idUser" required>
                    <option selected disabled value="">Escoge un operador</option>
                    {{#each operadores}}
                        <option value="{{iduser}}" name="{{fullname}}">{{fullname}}</option>
                    {{/each}}
                </select>
                <div class="invalid-feedback">
                    Selecciona un operador
                </div>
            </div>
            <div class="col-md">
                <label for="especialidad" class="form-label">Especialidad</label>
                <select name="idTipoOperador" class="form-select" id="idTipoOperador" required>
                    <option selected disabled value="">Escoge un tipo operador</option>
                    {{#each tipoOperador}}
                        <option value="{{idTipoOperador}}" name="{{nameTipoOperador}}">{{nameTipoOperador}}</option>
                    {{/each}}
                </select>
                <div class="invalid-feedback">
                    Selecciona un tipo operador
                </div>
            </div>




            <div class="form-group boton-send">
                <input type="submit" value="Actualizar/Agregar" class="btn btn-success btn-block" id="">
            </div>

        </div>
    </form>

</div>


</div>


