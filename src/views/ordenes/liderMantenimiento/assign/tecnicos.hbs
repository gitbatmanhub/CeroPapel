<div class="container">

{{#each ordenes}}
    <form action="/orden/tecnico/{{idOrdenTrabajo}}" id="form" class="formTecnicos" id="" method="post">


    <div class="este">
        <h1>Aseignar Tecnicos y Fechas a orden Nr#  {{idOrdenTrabajo}}</h1>

    </div>
{{/each}}


    <div class="row g-2 mb-3 tecnicosAl">
        <div class="col-md">
            <label for="nombreTecnico" class="form-label">Escoge el (los) tecnico(s)</label>

            <div id="divPadre">
                <select class="form-select" name="idTecnico" id="nombreTecnico">
                    <option value="null" selected> Selecciona un tecnico de la Lista</option>
                    {{#each tecnico}}
                        <option value="{{iduser}}">{{fullname}}</option>
                    {{/each}}
                </select>

            </div>
            <div id="selectsTecnico"></div>

        </div>
        <div class="col-1 botonAgregarT">
            <a class="btn btn-dark" href="#" onclick="duplicar1();"> +</a>
        </div>

    </div>
    <div class="row g-2 mb-3">
        <div class="col-md">
            <div class="form">
                <label for="">Fecha Inicio (Prevista)</label>
                <input name="fechaInicioPre" type="datetime-local" class="form-control" required>

            </div>
        </div>
        <div class="col-md ">
            <div class="form">
                <label for="">Fecha Final (Prevista)</label>
                <input name="fechaFinalPre" type="datetime-local" class="form-control" required>
            </div>
        </div>
    </div>


    <button class="btn btn-primary" type="submit" onclick="validate();">Enviar</button>
</form>

</div>









