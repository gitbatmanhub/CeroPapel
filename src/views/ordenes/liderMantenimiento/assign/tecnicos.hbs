<div class="container">

    {{#each ordenes}}
    <form action="/tecnico/{{idOrdenTrabajo}}" id="form" class="formTecnicos" id="" method="post">


        <div class="este">
            <h1 style="text-align: center">Asignar Tecnicos y Fechas a orden Nr#  {{idOrdenTrabajo}}</h1>

        </div>
    {{/each}}


    <div class="row g-2 mb-3 tecnicosAl">
        <div class="col-md">

            <div id="divPadre">
                <select class="form-select" name="idTecnico" id="nombreTecnico">
                    <option value="null" selected> Selecciona un tecnico de la Lista</option>
                    {{#each tecnico}}
                        <option value="{{idUser}}">{{fullname}}</option>
                    {{/each}}
                </select>

            </div>
            <div id="selectsTecnico"></div>

        </div>
        <div class="col-1 botonAgregarT">
            <a class="btn btn-dark" href="#" onclick="duplicar1();"> +</a>
        </div>

    </div>
    <div class="row g-2 mb-3">
        <div class="col-md">
            <div class="form">
                <label for="">Fecha Inicio (Prevista)</label>
                <input name="fechaInicioPre" type="datetime-local" class="form-control" required>

            </div>
        </div>
        <div class="col-md ">
            <div class="form">
                <label for="">Fecha Final (Prevista)</label>
                <input name="fechaFinalPre" type="datetime-local" class="form-control" required>
            </div>
        </div>
    </div>
    <div class=" mb-3">
        <select class="form-select" name="tipoMantenimiento" id="tipoMantenimiento">
            <option value="null" selected>Tipo Mantenimiento</option>
            {{#each tipoMantenimiento}}
                <option value="{{idTipoMantenimiento}}">{{nameTipoMantenimiento}}</option>
            {{/each}}
        </select>
    </div>
    <div class="mb-3">
        <label for="a">Ingrese la descripción del trabajo a realizarse</label>
        <textarea class="form-control" name="descripcionTrabajo" id="a" cols="15" rows="10"
                  placeholder="Se lo más especifico que puedas, ayudanos a entenderte."></textarea>
    </div>
    <input type="hidden" name="idStatus" value="3">


    <button class="btn btn-primary" type="submit" onclick="validate();">Enviar</button>
</form>

</div>








