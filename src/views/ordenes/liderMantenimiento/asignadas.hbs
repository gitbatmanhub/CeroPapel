                            </td>
                            <td class="area">
                                <p>{{nameMaquina}}</p>
                            </td>
                            <td class="estado">
                                <p>{{nameEstado}}</p>
                            </td>
                            <td class="prioridad">
                                <p>{{namePrioridad}}</p>
                            </td>
                            <td style="text-align: center">

                                <a href="/details/{{idOrdenTrabajo}}" class=" btn btn-primary">Ver Detalles</a>

                            </td>
                        </tr>

                    {{/each}}
                    </tbody>
                </table>
