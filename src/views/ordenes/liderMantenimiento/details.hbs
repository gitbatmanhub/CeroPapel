<div class="tittleDetails">
    <h1>Detalles de la orden #{{ datos.idOrdenTrabajo}}</h1>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>

        </thead>
        <tbody>
        <tr>
            <td style="text-align: center" colspan="4"><b>Datos de creación</b></td>
        </tr>
        <tr class="table-group-divider"></tr>
        <tr>
            <td><b>Id de Orden: </b>{{ datos.idOrdenTrabajo}} </td>
            <td><b>Area: </b>{{ datos.nameArea}} </td>
            <td><b>Maquina: </b>{{ datos.nameMaquina}} </td>
            <td><b>Estado: </b>{{ datos.EstadoMaquina}} </td>
        </tr>
        <tr>
            <td colspan="4"><b>Descripción:</b> {{datos.descripcion}}</td>
        </tr>
        <tr>
            <td><b>Estado Orden: </b>{{ datos.Status}} </td>
            <td><b>Prioridad: </b>{{ datos.Prioridad}} </td>
            <td><b>Creador: </b>{{ datos.Creador}} </td>
            <td colspan="2"><b>Fecha y hora de creación: </b>{{datos.SoloFecha}}</td>
            <td></td>
        </tr>

        <tr>
            <td style="text-align: center" colspan="4"><b>Datos de estado de la orden</b></td>

        </tr>
        <tr class="table-group-divider"></tr>

        {{#each statuS}}
            <tr>
                <td><b>Responsable: </b>{{NameAcepto}} </td>
                <td><b>Estado: </b>{{ Estado}} </td>
                <td colspan="2"><b>Fecha y Hora: </b>{{soloHora}} </td>
            </tr>
        {{/each}}
        <tr>
            <td style="text-align: center" colspan="4"><b>Comentarios de la orden</b></td>
        </tr>
        <tr class="table-group-divider"></tr>

        {{#each comentarios}}
            <tr>
                <td><b>Estatus: </b>{{nameStatus}} </td>
                <td colspan="2"><b>Comentario: </b>{{comentario}} </td>
                <td><b>Responsable: </b>{{fullname}} </td>
            </tr>
        {{/each}}

        <tr class="table-group-divider"></tr>
        {{#if tecnicosOrden}}
            <tr>
                <td style="text-align: center" colspan="4"><b>Tecnicos Orden</b></td>
            </tr>
            {{#each tecnicosOrden}}
                <tr>
                    <td colspan="2"><b>Nombre: </b>{{fullname}}</td>
                    <td colspan=""><b>Especialidad: </b>{{nameEspecialidad}}</td>
                    <td colspan=""><b>Mantenimiento: </b>{{nameTipoMantenimiento}}</td>
                </tr>
            {{/each}}
            {{#each fechasOrden}}
                <tr>
                    <td style="text-align: center" colspan="4"><b>Fechas Asignadas</b></td>
                </tr>
                <tr class="table-group-divider"></tr>

                <tr>
                    <td colspan="2"><b>Fecha Inicio: </b> {{SoloFechaInicio}}</td>
                    <td colspan="2"><b>Fecha Final: </b>{{SoloFechaFinal}}</td>
                </tr>
            {{/each}}



        {{else if tecnicosOrdenExterna}}
            <tr>
                <td style="text-align: center" colspan="4"><b>Orden Externa Información</b></td>
            </tr>
            <tr class="table-group-divider"></tr>

            {{#each proveedor}}
                <tr>
                    <td colspan="2"><b>Prestador de servicios: </b>{{nameProveedor}}</td>
                    <td><b>Mantenimiento: </b>{{nameTipoMantenimiento}}</td>
                    <td colspan="2"><b>Hora de Asignación: </b>{{create_at}}</td>
                </tr>
            {{/each}}
            {{#each fechasOrden}}
                <tr>
                    <td style="text-align: center" colspan="4"><b>Fechas Asignadas</b></td>
                </tr>
                <tr class="table-group-divider"></tr>

                <tr>
                    <td colspan="2"><b>Fecha Inicio: </b> {{fechaInicio}}</td>
                    <td colspan="2"><b>Fecha Final: </b>{{fechaFinal}}</td>
                </tr>
            {{/each}}


            <tr>
                <td style="text-align: center" colspan="4"><b>Tecnicos Orden Externa</b></td>
            </tr>
            <tr class="table-group-divider"></tr>

            {{#each tecnicosOrdenExterna}}
                <tr>
                    <td colspan="2"><b>Nombre del Técnico: </b>{{fullname}}</td>
                    <td colspan="2"><b>Especialidad Técnico: </b>{{nameEspecialidad}}</td>
                </tr>
            {{/each}}

        {{else}}
            <tr>
                <td style="text-align: center" colspan="4">Aún no se agregan Tecnicos a esta orden <br><a
                        href="/tecnico/{{datos.idOrdenTrabajo}}" class="btn btn-primary">Asignar Tecnicos</a></td>
            </tr>
        {{/if}}
        <tr>
            <td style="text-align: center" colspan="4"><b>Suministros</b></td>
        </tr>
        <tr class="table-group-divider">
            <!--
            {{#when datos.idStatus 'eq' 7 }}
                <td>
                    <a href="/suministro/{{datos.idOrdenTrabajo}} " class="btn btn-primary disabled">Agregar</a></td>
                </td>
            {{else}}
                <a  href="/suministro/{{datos.idOrdenTrabajo}} " class="btn btn-primary">Agregar</a></td>

            {{/when}}
            -->
        </tr>
        <div>
        {{#each suministro}}
            <tr>
                <td colspan="2"><b>Responsable: </b>{{fullname}}</td>
                <td><b>Cantidad: </b>{{cantidad}}</td>

                <td colspan="2"><b>Nombre Producto: </b>{{ nameProducto}}</td>

            </tr>

        {{/each}}


        </div>

        <tr>
            {{#when datos.idStatus 'eq' 5 }}
                <td>
                    <button class="btn btn-primary" data-bs-target="#modalFinish" data-bs-toggle="modal">Ver Acciones</button>
                </td>
            {{/when}}
            {{#when datos.idStatus 'eq' 6 }}
                <td>
                    <button class="btn btn-primary" data-bs-target="#modalFinish" data-bs-toggle="modal">Ver Acciones</button>
                </td>
            {{/when}}

        </tbody>
    </table>
</div>


<div class="modal fade" id="modalFinish" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
     tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Acciones</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card" style="width: 18rem;">
                    <lord-icon
                            src="https://cdn.lordicon.com/fpmskzsv.json"
                            trigger="loop"
                            delay="300"
                            style="width:150px;height:150px">
                    </lord-icon>
                    <div class="card-body">
                        <h5 class="card-title">Terminar y Agregar Comentarios</h5>
                        <p class="card-text">Si al revisar la orden no ha existido detalle alguno pudes proceder a
                            cerrarla, agradecemos tu compromiso con Novared</p>
                        <form action="/finishLiderplanificador" method="post" id="attendTecnico">
                            <textarea class="form-control" name="comentarioLider" id="" cols="30" rows="5"
                                      placeholder="Novared siempre agradece tu comentario para poder mejorar"
                                      required></textarea>
                            <input type="hidden" value="7" name="status">
                            <input type="hidden" value="{{datos.idOrdenTrabajo}}" name="orden">
                            <button type="submit" class="btn btn-primary">Cerrar Orden</button>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>


