<div class="formulario">
    <div class="container">
        <h2>Agregar Maquina</h2>
    </div>
    <form action="/addmaquina" class="needs-validation" novalidate method="post" id="" name="">


        <div class="col-md">
            <label for="idArea" class="form-label">Área</label>
            <select class="form-select" id="idArea" name="idArea" required>
                <option selected disabled value="">Escoge el área</option>
                {{#each area}}
                    <option value="{{idArea}}" name="{{nameArea}}">{{nameArea}}</option>
                {{/each}}
            </select>
            <div class="invalid-feedback">
                Escoge el área antes de agregar una maquina.
            </div>
        </div>


        <div class="col-md">
            <label for="nameMaquina" class="form-label">Nombre de la maquina</label>
            <input type="text" class="form-control" name="nameMaquina" id="nameMaquina" required placeholder="Ingresa el nombre de la maquina">
            <div class="invalid-feedback">
                Ingresa el nombre de la maquina.
            </div>
        </div>


<div class="form-group boton-send">
    <input type="submit" class="btn btn-success btn-block" id="">
</div>


</form>

</div>





