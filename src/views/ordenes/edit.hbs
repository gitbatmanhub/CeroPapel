
<div class="formulario">
    <form action="/orden/edit/{{orden.id}}" method="post">


        <label>Area</label>
        <input type="text" value="{{orden.area}}" class="form-control"name="area" placeholder="Aquí va la maquina">
        <br>
        <label>Descripción del problema</label>
        <textarea type="text"  class="form-control" name="descripcion" placeholder="Aquí va la descripción">{{orden.descripcion}}</textarea>
        <div class="form-group boton-send">
            <button class="btn btn-success btn-block"> Enviar</button>
        </div>
    </form>
</div>