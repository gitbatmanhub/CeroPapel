
<div class="form-signin w-100 m-auto signup">
    <form action="/registrarse" method="post">
        <!--<img class="mb-4" src="https://www.ifema.es/img/l/reciclaje/recycling-305569_1280.png" alt="" width="72" height="57">-->
        <h1 class="h3 mb-3 fw-normal">Registrate</h1>

        <div class="form-floating">
            <input type="text" name="fullname" class="form-control" id="floatingInput" placeholder="example">
            <label for="floatingInput">Nombre Completo</label>
        </div>

        <div class="form-floating">
            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="example">
            <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Contraseña">
            <label for="floatingPassword">Contraseña</label>
        </div>

        <div class="form-group">
            <button class="w-100 btn btn-lg btn-primary" type="submit">Registrarse</button>
            <button class="w-100 btn btn-lg btn-secondary" type="submit">Volver</button>
        </div>
    </form>
</div>
